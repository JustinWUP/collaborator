<% if @tasks.count > 0 %>

  <div class="boldstuff">Active Tasks:</div>
  <% @tasks.each do |t| %>
    <% if t.active %>
  	  <strong>&#8226;</strong> <%= link_to t.name, topic_task_path(@topic,t) %>

  	<% end %>
  <% end %>

    <div class="boldstuff">Tasks To Be Reviewed:</div>
  <% @tasks.each do |t| %>
    <% if ready_for_review(t) %>
    <strong>&#8226;</strong> <%= link_to t.name, topic_task_path(@topic,t) %>
    <% end %>
  <% end %>

   <div class="boldstuff">Finished Tasks:</div>
  <% @tasks.each do |t| %>
    <% if !t.active %>
    <strong>&#8226;</strong> <%= link_to t.name, topic_task_path(@topic,t) %>
    <% end %>
  <% end %>
  <% end %>
