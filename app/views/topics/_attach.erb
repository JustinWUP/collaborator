<%= form_for [@project, @topic] do |f| %> 
            <%= f.fields_for :attachments do |a| %>
                 <%= a.file_field :attachment %>
                  <%   @filenameugly = a.object.attachment.url.to_s.split("/original/",2) %>
                 <% @filename = @filenameugly.last.to_s.split("?" , 2) %>
                 <%= @filename.first %><br>
    <% end %>
    <%= f.submit "Upload Files" %>
    <% end %>
    <%= link_to "Add another file field",  :controller => :topics, :action => :addmore %>
