            <%= f.fields_for :attachments do |a| %>
               <%   @filenameugly = a.object.attachment.url.to_s.split("/original/",2) %>
                 <% @filename = @filenameugly.last.to_s.split("?" , 2) %>
				<%if @filename.first == "none" %>
           	    	<%= a.file_field :attachment %>
                	<%# @filename.first %><br>
    			<%end%>
    		<% end %>
    			<%= f.submit "Upload Files" %>
<% end %>
