<h1>Listing apps</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>  
    <th></th>
    <th></th>
  </tr>

<% @apps.each do |app| %>
  <tr>
    <td><%= link_to app.title, app.appurl, :target => "_blank" %></td>
    <td><%= app.description %></td>
    <td><%= app.image %></td>
  
    <td><%= link_to 'Show', app %></td>
    <td><%= link_to 'Edit', edit_app_path(app) %></td>
    <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

