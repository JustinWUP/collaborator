<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :repo %><br />
    <%= f.text_field :repo %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div id="" class="field">
        Who has access to this project?<br />
        <%= select_tag "project[user_ids]", options_from_collection_for_select(User.all, 'id', 'email', Proc.new { |user| @project.user_ids.include?(user.id)} ), {multiple: true} %>
  </div><!-- / -->
  <div id="" class="label-form">
    What labels can your customers view?<br />  
    <%= select_tag "enable_label[]", options_from_collection_for_select(@project.labels, 'id', 'name', Proc.new { |label| label.enabled == true} ), {multiple: true} %>
  </div><!-- / -->
  <div id="" class="retainer-form">
    <%= f.label :retainer_hours %>
    <%= f.text_field :retainer_hours %>
  </div><!-- / -->
  <div id="" class="">
    <%= f.label :retainer_expiration %>
    <%= date_select :project, :retainer_expiration %>
  </div><!-- / -->
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
